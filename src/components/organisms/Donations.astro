<section id="donaciones" class="donations-section">
    <div class="container">
        <div class="donations-card glass animate-up-donations">
            <div class="donations-content">
                <h2 class="section-title">Apoya Nuestro Proyecto</h2>
                <p class="section-desc">
                    Guatapets es una iniciativa comunitaria para ayudar a los animales de Guatapé. 
                    Si deseas colaborar económicamente o con insumos para seguir manteniendo esta plataforma y ayudando a los perritos y gatitos, ¡contáctame!
                </p>
                
                <div class="contact-info">
                    <a href="https://wa.me/573103652785" target="_blank" rel="noopener noreferrer" class="btn btn-whatsapp">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="whatsapp-icon">
                            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                        </svg>
                        Escríbeme por WhatsApp
                    </a>
                    <p class="number-text">+57 310 365 2785</p>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .donations-section {
        padding-top: 4rem;
        padding-bottom: 6rem;
        background-color: var(--c-surface-primary);
    }

    .donations-card {
        max-width: 800px;
        margin: 0 auto;
        padding: 4rem 2rem;
        border-radius: var(--radius-lg);
        text-align: center;
        background: linear-gradient(135deg, hsla(21, 48%, 36%, 0.05) 0%, hsla(21, 48%, 36%, 0.15) 100%);
        border: 1px solid hsla(21, 48%, 36%, 0.2);
        box-shadow: 0 15px 35px rgba(44, 26, 17, 0.05);
    }

    .section-title {
        color: var(--c-text);
        margin-bottom: 1.5rem;
        font-size: 2.25rem;
    }

    .section-desc {
        color: var(--c-secondary);
        font-size: 1.125rem;
        max-width: 600px;
        margin: 0 auto 3rem auto;
        line-height: 1.6;
    }

    .contact-info {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
    }

    .btn-whatsapp {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        background-color: #25D366;
        color: white;
        padding: 0.875rem 2rem;
        border-radius: var(--radius-full);
        font-weight: 600;
        font-size: 1.1rem;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(37, 211, 102, 0.3);
    }

    .btn-whatsapp:hover {
        background-color: #128C7E;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(37, 211, 102, 0.4);
    }

    .whatsapp-icon {
        width: 1.5rem;
        height: 1.5rem;
    }

    .number-text {
        color: var(--c-text);
        font-weight: 500;
        font-size: 1.1rem;
        opacity: 0.8;
    }

    .animate-up-donations {
        opacity: 0;
        transform: translateY(40px);
    }
</style>

<script>
    import gsap from "gsap";
    import ScrollTrigger from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    gsap.to(".animate-up-donations", {
        scrollTrigger: {
            trigger: ".donations-section",
            start: "top 80%",
        },
        y: 0,
        opacity: 1,
        duration: 0.8,
        ease: "power3.out",
    });
</script>
