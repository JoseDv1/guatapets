---
import '../styles/global.css';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "Guatapets - Encuentra, adopta y reporta mascotas en Guatap√©" } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<script>
			// Initialize GSAP globally if needed for scroll triggers later
			import { gsap } from 'gsap';
			
			// Small transition for page load
			gsap.from("body", {
				opacity: 0,
				duration: 0.8,
				ease: "power2.inOut"
			});
		</script>
	</body>
</html>
