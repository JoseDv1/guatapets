# Configuración de Base de Datos (Turso / SQLite Local)
# Si estás desarrollando localmente puedes usar simplemente file:local.db
DATABASE_URL=file:local.db

# Configuración de Cloudinary (Para subida y CDN de imágenes)
# Crea una cuenta gratuita en https://cloudinary.com/ y obtén estas credenciales
CLOUDINARY_CLOUD_NAME=tu_cloud_name
CLOUDINARY_API_KEY=tu_api_key
CLOUDINARY_API_SECRET=tu_api_secret
